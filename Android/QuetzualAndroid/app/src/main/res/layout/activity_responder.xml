<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#EFEFEF"
    android:foregroundTint="#FDFDFD"
    android:foregroundTintMode="multiply"
    android:orientation="vertical"
    tools:context=".responder">

    <TextView
        android:id="@+id/textView22"
        android:layout_width="411dp"
        android:layout_height="60dp"
        android:background="#C3BCF1"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:soundEffectsEnabled="false"
        android:text="Responder pregunta"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000000"
        android:textDirection="locale"
        android:textIsSelectable="false"
        android:textSize="34sp"
        android:textStyle="bold"
        android:verticalScrollbarPosition="defaultPosition"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/fechaactual"
                android:layout_width="411dp"
                android:layout_height="60dp"
                android:background="#D9AEDA"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:soundEffectsEnabled="false"
                android:text="22/09/2021"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#000000"
                android:textDirection="locale"
                android:textIsSelectable="false"
                android:textSize="34sp"
                android:textStyle="bold"
                android:verticalScrollbarPosition="defaultPosition" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="304dp"
                android:layout_height="match_parent"
                android:layout_margin="5sp"
                android:padding="1sp"
                android:text="Pregunta"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/despreres"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:paddingLeft="15sp"
                android:paddingTop="5sp"
                android:paddingRight="15sp"
                android:paddingBottom="5sp"
                android:text="Etiam ac facilisis nisi, "
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="304dp"
                android:layout_height="match_parent"
                android:layout_margin="5sp"
                android:padding="1sp"
                android:text="Tu respuesta"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/respuesta"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:textColor="#000000" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView90"
                android:layout_width="304dp"
                android:layout_height="match_parent"
                android:layout_margin="5sp"
                android:padding="1sp"
                android:text="Elige la categoria"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/cat1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cat1"
                    android:textColor="#000000" />

                <RadioButton
                    android:id="@+id/cat2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cat2"
                    android:textColor="#000000" />

                <RadioButton
                    android:id="@+id/cat3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cat3"
                    android:textColor="#000000" />

                <RadioButton
                    android:id="@+id/cat4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cat4"
                    android:textColor="#000000" />

                <RadioButton
                    android:id="@+id/cat5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cat5"
                    android:textColor="#000000" />
            </RadioGroup>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/respreg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="90sp"
                android:layout_marginBottom="10sp"
                android:backgroundTint="#8BEEB7"
                android:fontFamily="sans-serif-black"
                android:text="Responder pregunta"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/cance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="90sp"
                android:layout_marginBottom="10sp"
                android:backgroundTint="#F58282"
                android:fontFamily="sans-serif-black"
                android:padding="10sp"
                android:text="Cancelar"
                android:textSize="14sp" />
        </TableRow>
    </TableLayout>
</LinearLayout>