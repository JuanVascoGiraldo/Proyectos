<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Registrar</servlet-name>
        <servlet-class>Servlet.Registrar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IniciarSesion</servlet-name>
        <servlet-class>Servlet.IniciarSesion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AgregarAnime</servlet-name>
        <servlet-class>Servlet.AgregarAnime</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EliminarAnime</servlet-name>
        <servlet-class>Servlet.EliminarAnime</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CambiarEstado</servlet-name>
        <servlet-class>Servlet.CambiarEstado</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CerrarSesion</servlet-name>
        <servlet-class>Servlet.CerrarSesion</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Registrar</servlet-name>
        <url-pattern>/Registrar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IniciarSesion</servlet-name>
        <url-pattern>/IniciarSesion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AgregarAnime</servlet-name>
        <url-pattern>/AgregarAnime</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EliminarAnime</servlet-name>
        <url-pattern>/EliminarAnime</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CambiarEstado</servlet-name>
        <url-pattern>/CambiarEstado</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CerrarSesion</servlet-name>
        <url-pattern>/CerrarSesion</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
